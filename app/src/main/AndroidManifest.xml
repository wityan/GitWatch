<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gitwatch.gitwatch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_gitwatch_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_gitwatch_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".app.ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.ui.UserActivityListActivity"
            android:label="@string/title_useractivity_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".app.ui.UserActivityDetailActivity"
            android:label="@string/title_useractivity_detail"
            android:parentActivityName=".app.ui.UserActivityListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gitwatch.gitwatch.app.ui.UserActivityListActivity" />
        </activity>
        <activity
            android:name=".app.ui.RepositoryActivityListActivity"
            android:label="@string/title_repositoryactivity_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".app.ui.RepositoryActivityDetailActivity"
            android:label="@string/title_repositoryactivity_detail"
            android:parentActivityName=".app.ui.RepositoryActivityListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gitwatch.gitwatch.app.ui.RepositoryActivityListActivity" />
        </activity>
        <activity android:name=".app.ui.CommitActivityListActivity"></activity>
    </application>

</manifest>